services:
  elasticsearch:
    environment:
      discovery.type: single-node
      http.cors.allow-credentials: "true"
      http.cors.allow-headers: X-Requested-With,X-Auth-Token,Content-Type,Content-Length,Authorization
      http.cors.allow-origin: '*'
      http.cors.enabled: "true"
    image: docker.elastic.co/elasticsearch/elasticsearch:7.2.0
    ports:
    - published: 9200
      target: 9200
    restart: always
  sqlserver:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: Docker@Password!123
    image: microsoft/mssql-server-linux:2017-latest
    ports:
    - published: 11433
      target: 1433
  wishlist:
    build:
      context: C:\Users\jfcruz\Desktop\Projetos\WishList
      dockerfile: WishList/Dockerfile
    depends_on:
    - elasticsearch
    - sqlserver
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44343'
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: wishlist
    ports:
    - published: 57610
      target: 80
    - published: 44343
      target: 443
    volumes:
    - C:\Users\jfcruz\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\jfcruz\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.4'