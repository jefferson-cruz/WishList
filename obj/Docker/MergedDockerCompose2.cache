services:
  elasticsearch:
    environment:
      discovery.type: single-node
      http.cors.allow-credentials: "true"
      http.cors.allow-headers: X-Requested-With,X-Auth-Token,Content-Type,Content-Length,Authorization
      http.cors.allow-origin: '*'
      http.cors.enabled: "true"
    image: docker.elastic.co/elasticsearch/elasticsearch:7.2.0
    ports:
    - published: 9200
      target: 9200
    restart: always
  sqlserver:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: Docker@Password!123
    image: microsoft/mssql-server-linux:2017-latest
    ports:
    - published: 11433
      target: 1433
  wishlist:
    build:
      context: C:\Users\jfcruz\Desktop\Projetos\WishList
      dockerfile: WishList/Dockerfile
      target: base
    depends_on:
    - elasticsearch
    - sqlserver
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44343'
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: wishlist:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  bin/Debug/netcoreapp2.2/WishList.dll'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/bash -c "if PID=$$(pidof
        -x dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 57610
      target: 80
    - published: 44343
      target: 443
    volumes:
    - C:\Users\jfcruz\Desktop\Projetos\WishList\WishList:/app:rw
    - C:\Users\jfcruz\vsdbg\vs2017u5:/remote_debugger:ro
    - C:\Users\jfcruz\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\jfcruz\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - C:\Users\jfcruz\.nuget\packages:/root/.nuget/packages:ro
version: '3.4'